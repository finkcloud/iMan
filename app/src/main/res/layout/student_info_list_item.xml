<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_height="150dp">

                <TextView
                    android:id="@+id/student_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harvey Grant"
                    android:textSize="24sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/student_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28 years"
                    android:textSize="16sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/student_reg_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MIT/CS/19/007"
                    android:textSize="16sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/student_phone_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 80 2345 678"
                    android:textSize="16sp"
                    android:textColor="#000"/>
            </LinearLayout>

            <View
                android:layout_marginTop="20dp"
                android:layout_width="2dp"
                android:padding="8dp"
                android:layout_height="100dp"
                android:background="#eee"/>

            <ImageView
                android:padding="6pt"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="150dp"
                android:src="@drawable/mit"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>